{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"]
    }
    // "jsx" y "jsxImportSource" eliminados aqu√≠
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "types/**/*",
    "dist/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
