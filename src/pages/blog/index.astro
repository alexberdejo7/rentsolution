---
import MainLayout from '../../layouts/MainLayout.astro';

interface MarkdownModule {
  frontmatter: {
    title: string;
    date: string;
    description?: string;
  };
}

const posts = import.meta.glob('../../content/polizas/*.md', { eager: true }) as Record<string, MarkdownModule>;

const sortedPosts = Object.entries(posts)
  .map(([path, post]) => {
    const slug = path.split('/').pop()!.replace('.md', '');
    return { ...post.frontmatter, slug };
  })
  .sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
---

<MainLayout title="Blog de Pólizas">
  <section class="max-w-4xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-bold mb-8">Blog de Pólizas</h1>
    <ul class="space-y-8">
      {sortedPosts.map((post) => (
        <li class="p-6 bg-midnight text-white font-poppins rounded-lg shadow-md hover:shadow-lg transition-shadow">
          <a href={`/blog/${post.slug}/`} class="text-2xl font-semibold text-dorado-secundario hover:underline">
            {post.title}
          </a>
          <p class="text-gray-600 mt-2">{post.description}</p>
          <time class="block mt-2 text-sm text-gray-500" datetime={post.date}>
            {new Date(post.date).toLocaleDateString(undefined, {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
        </li>
      ))}
    </ul>
  </section>
</MainLayout>
