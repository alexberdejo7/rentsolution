<style>
  /* Estados activos para touch */
  .service-card.active .card-main {
    transform: translateY(-8px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
  }

  .service-card.active .card-icon-bg {
    opacity: 0.7;
  }

  .service-card.active .card-icon {
    transform: scale(1.1);
    filter: drop-shadow(0 10px 25px rgba(0, 0, 0, 0.15));
  }

  .service-card.active .card-title {
    color: #1d4ed8; /* blue-700 */
  }

  .service-card.active .card-indicator {
    width: 75%;
  }

  .service-card.active .card-number {
    transform: scale(1.1);
  }

  .service-card.active .feature-item {
    transform: scale(1.02);
  }

  .service-card.active .feature-icon {
    transform: scale(1.1);
  }

  /* Estados hover para desktop */
  @media (hover: hover) {
    .service-card:hover .card-main {
      transform: translateY(-8px);
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
    }

    .service-card:hover .card-icon-bg {
      opacity: 0.7;
    }

    .service-card:hover .card-icon {
      transform: scale(1.1);
      filter: drop-shadow(0 10px 25px rgba(0, 0, 0, 0.15));
    }

    .service-card:hover .card-title {
      color: #1d4ed8;
    }

    .service-card:hover .card-indicator {
      width: 75%;
    }

    .service-card:hover .card-number {
      transform: scale(1.1);
    }

    .service-card:hover .feature-item {
      transform: scale(1.02);
    }

    .service-card:hover .feature-icon {
      transform: scale(1.1);
    }
  }

  /* CTA Button effects */
  .cta-button.active {
    background-color: #e5e7eb; /* gray-200 */
    transform: scale(0.98);
  }

  .cta-button.active .cta-arrow {
    transform: translateX(4px);
  }

  @media (hover: hover) {
    .cta-button:hover {
      background-color: #e5e7eb;
    }

    .cta-button:hover .cta-arrow {
      transform: translateX(4px);
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.querySelector('#services .grid');
    const ctaButton = document.querySelector('.cta-button');
    let activeCard: HTMLElement | null = null;
    let autoDeactivateTimeout: number | null = null;

    if (!container) return;

    // Función para activar una card
    function activateCard(card: HTMLElement) {
      if (activeCard && activeCard !== card) {
        deactivateCard(activeCard);
      }
      card.classList.add('active');
      activeCard = card;

      // Auto desactivar después de 3 segundos
      if (autoDeactivateTimeout) {
        clearTimeout(autoDeactivateTimeout);
      }
      autoDeactivateTimeout = window.setTimeout(() => {
        deactivateCard(card);
      }, 3000);
    }

    // Función para desactivar una card
    function deactivateCard(card: HTMLElement) {
      card.classList.remove('active');
      if (activeCard === card) {
        activeCard = null;
      }
      if (autoDeactivateTimeout) {
        clearTimeout(autoDeactivateTimeout);
        autoDeactivateTimeout = null;
      }
    }

    // Evento touchstart para las cards usando delegación
    container.addEventListener('touchstart', (e: TouchEvent) => {
      const target = e.target as Element | null;
      if (!target) return;

      const card = target.closest('.service-card') as HTMLElement | null;
      if (!card) {
        // Tocar fuera de cards => desactivar activeCard si hay
        if (activeCard) {
          deactivateCard(activeCard);
        }
        return;
      }

      // Si tocan la card activa => desactivarla
      if (activeCard === card) {
        deactivateCard(card);
      } else {
        activateCard(card);
      }

      // Solo prevenir si tocamos una card para evitar scroll accidental
      e.preventDefault();
    }, { passive: false });

    // Para mouse hover en desktop (solo si no hay touch)
    if (!('ontouchstart' in window)) {
      container.addEventListener('mouseenter', (e) => {
        const card = (e.target as Element).closest('.service-card');
        if (card) {
          (card as HTMLElement).classList.add('active');
        }
      }, true); // usar captura para atrapar el evento antes

      container.addEventListener('mouseleave', (e) => {
        const card = (e.target as Element).closest('.service-card');
        if (card) {
          (card as HTMLElement).classList.remove('active');
        }
      }, true);
    }

    // CTA Button effects (sin cambios)
    if (ctaButton) {
      ctaButton.addEventListener('touchstart', () => {
        ctaButton.classList.add('active');
      }, { passive: true });

      ctaButton.addEventListener('touchend', () => {
        setTimeout(() => ctaButton.classList.remove('active'), 150);
      }, { passive: true });

      ctaButton.addEventListener('touchcancel', () => {
        ctaButton.classList.remove('active');
      }, { passive: true });
    }
  });
</script>
