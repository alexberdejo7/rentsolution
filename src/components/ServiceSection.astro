---
import ServiceCard from './ServiceCard.astro';

// Íconos Lucide convertidos a SVG puro.
const ShieldIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
`;
const SearchIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/></svg>
`;
const ScaleIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-scale"><path d="m16 16 3-8 3 8c0 1-1 2-2 2s-2-1-2-2Z"/><path d="m8 16 3-8 3 8c0 1-1 2-2 2s-2-1-2-2Z"/><path d="M7 21h10"/><path d="M12 3v18"/></svg>
`;
---
<section id="servicios" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Nuestros Servicios</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Protección jurídica integral para propietarios en procesos de arrendamiento
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <ServiceCard
        iconHtml={ShieldIcon}
        iconBgColor="bg-blue-100"
        iconColor="text-blue-600"
        title="Pólizas Jurídicas"
        description="Protección integral para propietarios y arrendatarios con cobertura completa"
        features={[
          "Falta de pagos cubierta",
          "Daños contra el patrimonio",
          "Protección al arrendatario incluida"
        ]}
      />
      <ServiceCard
        iconHtml={SearchIcon}
        iconBgColor="bg-green-100"
        iconColor="text-green-600"
        title="Investigación de Inquilino y Obligado Solidario"
        description="Verificación exhaustiva para garantizar la seguridad de tu inversión"
        features={[
          "Historial crediticio detallado",
          "Análisis del historial de arrendamientos previos",
          "Análisis de solvencia económica"
        ]}
      />
      <ServiceCard
        iconHtml={ScaleIcon}
        iconBgColor="bg-amber-100"
        iconColor="text-amber-600"
        title="Resolución de Conflictos"
        description="Manejo especializado de disputas legales y procesos de recuperación"
        features={[
          "Trámites de desocupación y entrega",
          "Mediación y arbitraje",
          "Recuperación judicial de adeudos"
        ]}
      />
    </div>
  </div>
</section>

<div class="w-full h-20 bg-black text-white  text-center py-3 px-4">
  <p class=" text-balance mx-auto m-2 p-2 sm:text-base text-5xl font-extrabold line-clamp-2 tracking-wide">
    Descubre la seguridad y confianza que una póliza jurídica integral 
    puede ofrecer en el mundo del arrendamiento.
  </p>
</div>
