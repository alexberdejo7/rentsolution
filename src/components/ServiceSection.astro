---
// src/components/ServicesSection.astro
import ServiceCard from './ServiceCard.astro';

// Íconos Lucide convertidos a SVG puro.
const ShieldIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
`;
const ScaleIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-scale"><path d="m16 16 3-3-3-3"/><path d="M16 20V4"/><path d="M8 8H4v8h4"/><path d="M12 2v20"/></svg>
`;
const HomeIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-home"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
`;
---
<section id="servicios" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Nuestros Servicios</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Cobertura completa para todos los aspectos legales de tu propiedad en arrendamiento
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <ServiceCard
        iconHtml={ShieldIcon}
        iconBgColor="bg-blue-100"
        iconColor="text-blue-600"
        title="Cobertura por Impago"
        description="Protección completa contra la falta de pago de rentas mensuales"
        features={[
          "Hasta 12 meses de renta",
          "Gastos de cobranza incluidos",
          "Sin deducibles"
        ]}
      />
      <ServiceCard
        iconHtml={ScaleIcon}
        iconBgColor="bg-amber-100"
        iconColor="text-amber-600"
        title="Proceso de Desalojo"
        description="Manejo completo del proceso legal de desalojo"
        features={[
          "Abogados especializados",
          "Todos los gastos legales",
          "Seguimiento personalizado"
        ]}
      />
      <ServiceCard
        iconHtml={HomeIcon}
        iconBgColor="bg-blue-100"
        iconColor="text-blue-600"
        title="Daños a la Propiedad"
        description="Cobertura por daños causados por inquilinos"
        features={[
          "Evaluación profesional",
          "Reparaciones cubiertas",
          "Red de proveedores"
        ]}
      />
    </div>
  </div>
</section>