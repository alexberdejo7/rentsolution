---
// src/components/ServiceCard.astro
// √çconos Lucide convertidos a SVG puro.
const CheckCircleIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-check-circle"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
`;

interface Props {
  iconHtml: string;
  iconBgColor: string;
  iconColor: string;
  title: string;
  description: string;
  features: string[];
}

const { iconHtml, iconBgColor, iconColor, title, description, features } = Astro.props;
---
<div class="bg-white rounded-lg shadow-md p-6 group hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
  <div class="w-12 h-12 rounded-lg flex items-center justify-center mb-4 transition-colors" class:list={[iconBgColor, `group-hover:${iconColor.replace('text-', 'bg-')}`]}>
    <span class={`w-6 h-6 transition-colors`} class:list={[iconColor, `group-hover:text-white`]} set:html={iconHtml}></span>
  </div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <ul class="space-y-2 text-sm text-gray-600">
    {features.map((feature) => (
      <li class="flex items-center">
        <span class="w-4 h-4 text-green-500 mr-2" set:html={CheckCircleIcon}></span>
        {feature}
      </li>
    ))}
  </ul>
</div>


