<!-- Hero Section con imagen como fondo total -->
<section class="relative overflow-hidden min-h-screen flex items-center bg-gradient-to-br from-midnight via-blue-950 to-blue-800 bg-[url('/images/hero1.PNG')] bg-right bg-no-repeat bg-cover">
