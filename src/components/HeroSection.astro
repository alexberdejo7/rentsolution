---
// src/components/HeroSection.astro

// Íconos Lucide convertidos a SVG puro.
// Asegúrate de que estos SVGs estén completos en tu archivo.
const ShieldIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
`;
const ArrowRightIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="M12 5l7 7-7 7"/></svg>
`;
const HomeIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-home"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
`;
---

<section class="relative pt-16 pb-20 md:py-24 bg-midnight text-white overflow-hidden">
  <div class="absolute inset-0 z-0 opacity-20 pointer-events-none">
    <div class="absolute -top-1/4 -left-1/4 w-96 h-96 bg-azul-dos/10 rounded-full mix-blend-screen filter blur-3xl animate-float-slow"></div>
    <div class="absolute -bottom-1/4 -right-1/4 w-80 h-80 bg-azul-shade/10 rounded-full mix-blend-screen filter blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute top-1/2 left-1/3 w-64 h-64 bg-dorado-secundario/10 rounded-full mix-blend-screen filter blur-3xl animate-float-medium animation-delay-4000"></div>
  </div>

  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <div class="space-y-6 text-center lg:text-left">
        {/* Etiqueta / Badge con más dorado */}
        <div class="inline-flex items-center px-3 py-1 rounded-full bg-dorado-secundario/20 text-dorado-secundario text-sm font-medium border border-dorado-secundario backdrop-blur-sm">
          <span class="w-4 h-4 mr-2 text-dorado-secundario">
            <Fragment set:html={ShieldIcon} />
          </span>
          Protección Legal Garantizada
        </div>
        
        {/* Título Principal con énfasis dorado */}
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white leading-tight">
          Pólizas Jurídicas de <span class="text-dorado-secundario">Arrendamiento</span> en México
        </h1>
        
        {/* Subtítulo / Descripción */}
        <p class="text-lg sm:text-xl text-gray-200 leading-relaxed max-w-2xl mx-auto lg:mx-0">
          Obtén **seguridad y tranquilidad** con nuestras pólizas jurídicas especializadas en arrendamiento, respaldadas por asesoría legal completa.
        </p>
        
        {/* Botones de Acción - Botón principal más dorado */}
        <div class="flex flex-col sm:flex-row justify-center lg:justify-start gap-4 pt-4">
          <a href="#contacto" class="inline-flex items-center justify-center rounded-full text-lg font-bold h-12 px-8 py-2 
                                    bg-dorado-secundario hover:bg-amber-400 text-azul-primario 
                                    transition-all duration-300 shadow-xl 
                                    transform hover:scale-105">
            Obtener Póliza
            <span class="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" aria-hidden="true">
              <Fragment set:html={ArrowRightIcon} />
            </span>
          </a>
          <a href="#servicios" class="inline-flex items-center justify-center rounded-full text-lg font-medium h-12 px-8 py-2 
                                    border border-dorado-secundario text-white hover:bg-white/10 bg-transparent 
                                    transition-colors duration-300 shadow-md">
            Ver Servicios
            <span class="ml-2 w-5 h-5 text-dorado-secundario" aria-hidden="true"> {/* Icono dorado */}
                <Fragment set:html={HomeIcon} />
            </span>
          </a>
        </div>
        
        {/* Estadísticas / Indicadores de Confianza - Dorado estratégico */}
        <div class="flex flex-wrap justify-center lg:justify-start items-center space-x-6 sm:space-x-8 pt-8 text-gray-200">
          <div class="text-center">
            <div class="text-3xl font-extrabold text-dorado-secundario">500+</div>
            <div class="text-sm text-gray-300">Propietarios Protegidos</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-extrabold text-white">98%</div>
            <div class="text-sm text-gray-300">Casos Exitosos</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-extrabold text-dorado-secundario">24/7</div>
            <div class="text-sm text-gray-300">Soporte Legal Dedicado</div>
          </div>
        </div>
      </div>

      <div class="mt-12 lg:mt-0 flex justify-center lg:justify-end">
        {/* Nueva imagen sugerida: un concepto más abstracto y profesional */}
        
        <img
          src="/images/11.png" // 
          alt="Concepto Abstracto de Protección Legal y Seguridad Jurídica"
          class="w-full max-w-lg lg:max-w-none h-auto rounded-xl shadow-xl border border-dorado-secundario/30 transition-transform duration-500 hover:scale-102"
          loading="eager"
        />
      </div>

    </div>
  </div>
</section>