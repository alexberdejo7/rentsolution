            <div class={`absolute inset-0 bg-gradient-to-br ${card.overlay}`}></div>
          </div>

          <!-- Content -->
          <div class="relative z-10 p-4 md:p-6 h-full flex flex-col justify-between group-hover:text-white transition-colors duration-500">
            <div>
              <div class="flex items-start justify-between mb-3">
                
                <div class="text-3xl md:text-4xl font-bold text-slate-300 group-hover:text-white/30 transition-colors duration-500">{card.n}</div>
              </div>
              <h3 class="text-base font-semibold mb-1 text-slate-900 group-hover:text-white transition-colors duration-500 leading-tight">
                {card.title}
              </h3>
              <p class={`text-sm text-slate-600 group-hover:${card.hoverText} leading-relaxed transition-colors duration-500`}>
