---
// src/components/SiteHeader.astro

const MenuIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-midnight" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
  </svg>
`;

const CloseIcon = `
  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-midnight" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
  </svg>
`;
---

<nav class="w-full bg-white/50 backdrop-blur-md border-b border-black/10 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">

      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <img src="/images/rentlogo.png" alt="Rent Solution Logo" class="h-14 w-auto" />
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex font-montserrat items-center space-x-10">
        <a href="#services" class="text-sm font-medium text-midnight hover:text-dorado-secundario transition">Servicios</a>
        <a href="#ventajas" class="text-sm font-medium text-midnight hover:text-dorado-secundario transition">Ventajas</a>
        <a href="#info" class="text-sm font-medium text-midnight hover:text-dorado-secundario transition">¿Qué es?</a>
        <a href="#cta" class="text-sm font-medium text-midnight hover:text-dorado-secundario transition">Contacto</a>
        <a
          href="https://wa.me/5217772701431"
          class="ml-5 inline-flex items-center rounded-xl  px-5 py-2 bg-dorado-secundario text-midnight text-sm font-extrabold shadow hover:bg-amber-500 transition"
        >
          Cotizar Ahora
        </a>
      </div>

      <!-- Mobile Toggle -->
      <div class="md:hidden">
        <button id="mobile-menu-toggle" class="focus:outline-none p-2">
          <span id="menu-icon" set:html={MenuIcon}></span>
          <span id="close-icon" set:html={CloseIcon} class="hidden"></span>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden font-montserrat px-4 pb-4 pt-2 bg-white/90 backdrop-blur border-t border-black/10">
    <div class="space-y-3">
      <a href="#service" class="block py-2 text-sm text-midnight hover:text-dorado-secundario transition">Servicios</a>
      <a href="#ventajas" class="block py-2 text-sm text-midnight hover:text-dorado-secundario transition">Ventajas</a>
      <a href="#info" class="block py-2 text-sm text-midnight hover:text-dorado-secundario transition">¿Qué es?</a>
      <a href="#cta" class="block py-2 text-sm text-midnight hover:text-dorado-secundario transition">Contacto</a>
      <a href="https://wa.me/5217772701431" class="block text-center rounded-full bg-dorado-secundario text-midnight px-5 py-2 font-semibold text-sm hover:bg-amber-500 transition">
        Cotizar Ahora
      </a>
    </div>
  </div>

  <script>
    const toggleBtn = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    const iconMenu = document.getElementById('menu-icon');
    const iconClose = document.getElementById('close-icon');

    toggleBtn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
      iconMenu.classList.toggle('hidden');
      iconClose.classList.toggle('hidden');
    });

    const mobileLinks = menu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
        iconMenu.classList.remove('hidden');
        iconClose.classList.add('hidden');
      });
    });
  </script>
</nav>
