---
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-4 gap-8">
      
      <!-- Logo + nombre -->
      <div>
        <div class="flex items-center space-x-2 mb-4 text-blue-400">
          <img class="w-20 h-20" src="../../public/images/rentlogo.png" alt="">
          
        </div>
      
      </div>

      <!-- Servicios -->
      <div>
        <h4 class="font-semibold mb-4">Servicios</h4>
        <ul class="space-y-2 text-gray-400">
          <li>Pólizas Jurídicas</li>
          <li>Cobertura por Impago</li>
          <li>Proceso de Desalojo</li>
          <li>Daños a Propiedad</li>
          <li>Investigacion de inquilino</li>
          <li>Resolucion de conflictos</li>
        </ul>
      </div>

      <!-- Empresa -->
      <div>
        <h4 class="font-semibold mb-4">Empresa</h4>
        <ul class="space-y-2 text-gray-400">
          <li>Nosotros</li>
           <li>Terminos y Condiciones</li>
        </ul>
      </div>

      <!-- Nueva sección: Ubicación y Horarios -->
      <div>
        <h4 class="font-semibold mb-4">Ubicación</h4>
        <p class="text-gray-400">Av. Reforma 123, Ciudad de México, México</p>

        <h4 class="font-semibold mt-6 mb-4">Horarios</h4>
        <p class="text-gray-400">Lunes a Viernes: 9:00 AM - 6:00 PM</p>
        <p class="text-gray-400">Sábado: 10:00 AM - 2:00 PM</p>
        <p class="text-gray-400">Domingo: Cerrado</p>
      </div>

    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; {currentYear} RentSolution</p>
    </div>
  </div>
</footer>
