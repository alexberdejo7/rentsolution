---
// src/components/FeatureItem.astro
interface Props {
  iconHtml?: string; // Recibe el SVG como string HTML
  title: string;
  description: string;
  bgColor?: string; // Para el color de fondo del ícono (ej: "bg-blue-100")
  iconColor?: string; // Para el color del ícono (ej: "text-blue-600")
  number?: string; // Opcional, para las ventajas numeradas
  numberBgColor?: string;
}

const { iconHtml, title, description, bgColor = 'bg-blue-100', iconColor = 'text-blue-600', number, numberBgColor = 'bg-blue-600' } = Astro.props;
---
<div class="flex items-start space-x-4">
  {number ? (
    <div class={`w-8 h-8 ${numberBgColor} rounded-full flex items-center justify-center flex-shrink-0`}>
      <span class="text-white font-bold text-sm">{number}</span>
    </div>
  ) : (
    <div class={`w-12 h-12 ${bgColor} rounded-lg flex items-center justify-center flex-shrink-0`}>
      <span class={`w-6 h-6 ${iconColor}`} set:html={iconHtml}></span>
    </div>
  )}
  <div>
    <h3 class="text-xl font-semibold text-gray-900 mb-2">{title}</h3>
    <p class="text-gray-600">
      {description}
    </p>
  </div>
</div>