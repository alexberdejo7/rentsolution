---
const aliados = [
  {
    src: "/images/evo2.png",
    href: "https://www.facebook.com/evolucion.habitat",
    alt: "Evolución Habitat",
    desc: "Servicios Inmobiliarios"
  },
  {
    src: "/images/vive.png",
    href: "https://vivecontempo.com/",
    alt: "Vive Contempo",
    desc: "Bienes raices de calidad"
  },
  {
    src: "/images/agl.webp",
    href: "https://agljuridicoinmobiliario.com/",
    alt: "AGL Jurídico Inmobiliario",
    desc: "Expertos en Remates Hipotecarios  "
  }
];
---

<section id="aliados" class="bg-slate-100 py-16 text-black ">

  <div class="max-w-6xl mx-auto px-4 md:px-8">
    <h2 class="text-center font-montserrat text-azul-primario text-2xl md:text-3xl font-semibold mb-12">
      Nuestros aliados
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-10 items-center justify-items-center">
      {aliados.map((aliado) => (
        <a
          href={aliado.href}
          target="_blank"
          rel="noopener noreferrer"
          class="group flex flex-col items-center text-center hover:scale-110 transition-transform duration-300"
        >
          <img
            src={aliado.src}
            alt={aliado.alt}
            class="h-20 w-20 md:h-24 md:w-24 object-contain brightness-90 hover:brightness-110 transition-all duration-300"
          />
          <p class="text-sm text-azul-primario font-thin font-poppins  mt-4 max-w-xs group-hover:text-black transition-colors duration-400">
            {aliado.desc}
          </p>
        </a>
      ))}
    </div>
  </div>
</section>
